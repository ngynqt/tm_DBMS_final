[mysqld]
# Server ID for Slave (must be different from master)
server-id = 2

# Relay log configuration
relay-log = relay-bin
log-bin = mysql-bin
binlog_format = ROW

# Read-only mode (prevents writes to slave)
read_only = 1

# Replication settings
replicate-do-db = my_store
slave_net_timeout = 60

# Performance optimization (same as master)
innodb_buffer_pool_size = 2G
innodb_log_file_size = 512M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1

# Connection settings
max_connections = 300
wait_timeout = 600

# Query cache (for read performance)
query_cache_size = 128M
query_cache_type = 1

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# InnoDB settings
innodb_write_io_threads = 8
innodb_read_io_threads = 8
innodb_thread_concurrency = 16
